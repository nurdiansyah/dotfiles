;; Kanata Configuration for macOS
;; This configuration provides ergonomic keyboard remappings

;; ============================================================================
;; Source Configuration
;; ============================================================================
(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  fn   lctl lalt lmet           spc            rmet ralt
)

;; ============================================================================
;; Layer Definitions
;; ============================================================================

;; Default Layer - Base remappings
(deflayer default
  esc  brdn brup XX   mctl bldn blup prev pp   next mute vold volu
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  @cap a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  fn   lctl lalt lmet           spc            rmet ralt
)

;; Navigation Layer - Accessed via Caps Lock
(deflayer navigation
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    home pgdn pgup end  _    _    _    _
  _    _    _    _    _    _    left down up   rght _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _              _              _    _
)

;; ============================================================================
;; Aliases and Tap-Hold
;; ============================================================================

;; Caps Lock behavior (robust double-tap via tap-dance):
;; - tap = Escape
;; - hold = Control
;; - double-tap = toggle Caps Lock (reliable tap-dance implementation)
;; Implementation notes:
;; - Use a tap-dance for single vs double taps, and a tap-hold wrapper to preserve
;;   the hold-for-Modifier behavior. This is more reliable across machines.
(defalias
  cap_td (tap-dance 300 (esc caps))  ;; once: Esc, twice: send Caps (toggle)
  cap    (tap-hold 200 300 @cap_td lctl) ;; tap->cap_td, hold->Ctrl
)

;; ============================================================================
;; Configuration Options
;; ============================================================================

;; Process unmapped keys
(defvar
  ;; Chord timeout (ms) for templates/defchords or local use
  chord-timeout 50
)

(defcfg
  ;; For macOS
  process-unmapped-keys yes
  
  ;; Danger zone - allows dangerous keys to be remapped
  danger-enable-cmd yes
  
  ;; Sequence timeout
  sequence-timeout 2000

  macos-dev-names-include (
    "Karabiner DriverKit VirtualHIDKeyboard 1.8.0"
  )
)
